{
  "manifest_version": 2,
  "name": "Catppuccin-Mocha-Lavender Thunderbird Theme",
  "version": "1.0.0",
  "applications": {
    "gecko": {
      "id": "elkrien@gmail.com",
      "strict_min_version": "60.0"
    }
